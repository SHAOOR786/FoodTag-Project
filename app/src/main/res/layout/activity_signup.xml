<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignupActivity">


    <ImageView
        android:id="@+id/imageViewlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textViewTitle"
        app:layout_constraintTop_toBottomOf="@id/imageViewlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your Account"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/textViewUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/editTextUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/textViewUserId"
        app:layout_constraintTop_toTopOf="@id/textViewUserId"
        app:layout_constraintBottom_toBottomOf="@id/textViewUserId"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="52dp"
        android:background="@color/white"

        />

    <TextView
        android:id="@+id/textViewFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        app:layout_constraintStart_toStartOf="@id/textViewUserId"
        app:layout_constraintTop_toBottomOf="@id/textViewUserId"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"

        />

    <EditText
        android:id="@+id/editTextFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:background="@color/white"

        app:layout_constraintTop_toTopOf="@id/textViewFname"
        app:layout_constraintBottom_toBottomOf="@id/textViewFname"
        app:layout_constraintLeft_toRightOf="@id/textViewFname"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textViewLname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        app:layout_constraintStart_toStartOf="@id/textViewFname"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/editTextFname"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/editTextLname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@color/white"

        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/editTextFname"
        app:layout_constraintTop_toTopOf="@id/textViewLname"
        app:layout_constraintBottom_toBottomOf="@id/textViewLname"
        android:layout_marginTop="9dp"/>

    <TextView
        android:id="@+id/textViewPnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone no."
        app:layout_constraintStart_toStartOf="@id/textViewFname"
        app:layout_constraintTop_toBottomOf="@id/editTextLname"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@color/white"

        android:inputType=""
        app:layout_constraintTop_toTopOf="@id/textViewPnumber"
        app:layout_constraintBottom_toBottomOf="@id/textViewPnumber"
        app:layout_constraintStart_toStartOf="@id/editTextLname"
        android:layout_marginTop="9dp"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@id/editTextPhoneNumber"
        app:layout_constraintStart_toStartOf="@id/textViewPnumber"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:textColor="@color/black"

        />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType=""
        app:layout_constraintTop_toTopOf="@id/textViewEmail"
        app:layout_constraintBottom_toBottomOf="@id/textViewEmail"
        app:layout_constraintStart_toStartOf="@id/editTextPhoneNumber"
        android:layout_marginTop="9dp"
        android:background="@color/white"

        />

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@id/textViewEmail"
        app:layout_constraintStart_toStartOf="@id/textViewEmail"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@color/white"

        android:inputType=""
        app:layout_constraintTop_toTopOf="@id/textViewPassword"
        app:layout_constraintBottom_toBottomOf="@id/textViewPassword"
        app:layout_constraintStart_toStartOf="@id/editTextEmail"
        android:layout_marginTop="9dp"/>

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextPassword"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:textColor="#80E51C"

        />

</androidx.constraintlayout.widget.ConstraintLayout>